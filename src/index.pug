doctype html
html(lang="en")
    include html/head
    body 
        include html/header
        include html/main
        include html/footer 
        script(src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js") 
        script.
            var swiper = new Swiper(".mySwiper", {
            effect: "coverflow",
            grabCursor: true,
            centeredSlides: true,
            slidesPerView: "auto",
            coverflowEffect: {
            rotate: 50,
            stretch: 0,
            depth: 100,
            modifier: 1,
            slideShadows: true,
            },
            pagination: {
            el: ".swiper-pagination",
            },
            });